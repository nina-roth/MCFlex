AUTOMAKE_OPTIONS = foreign
check_PROGRAMS = topass tofail
TESTS = topass tofail
XFAIL_TESTS = tofail
bindir = @bindir@
INCLUDEDIR = $(top_srcdir)/include

topass_SOURCES = test_pass.cpp 
topass_CXXFLAGS = -std=c++11 -I$(INCLUDEDIR)
topass_LDADD = $(top_srcdir)/src/libmcflex.a
topass_LDFLAGS = -lm -lgsl -lgslcblas

tofail_SOURCES = test_fail.cpp 
tofail_CXXFLAGS = -std=c++11 -I$(INCLUDEDIR)
tofail_LDADD = $(top_srcdir)/src/libmcflex.a
tofail_LDFLAGS = -lm -lgsl -lgslcblas

clean-local:
	-rm -rf *.dSYM ##Mac-specific to remove symbols generated by -g flag